<!DOCTYPE html>
<html lang="ko">

<head>
    <style type="text/css">
    </style>
    {% include "sub/head" %}
    {% block head %}{% endblock head %}
</head>

<body>
    {% include "sub/head_content" %}
    <div id="popup_overlay"></div>
    <div id="wrapper_popup"></div>
    <main class="m_container">
        <section class="project">
        
            <h2 class="sec_tit">{{message('msg.017')}}</h2>
            <div class="search_wrap">
                <div class="searchbox_wrap">
                    <div class="selectbox" style="min-width: 110px;">
                        <select id="searchItem" class="">
                            <option selected disabled value="">{{message('item.com.005')}}</option>
                            <option value="pjtName">{{message('item.com.007')}}</option>
                            <option value="pjtAddress">{{message('item.com.008')}}</option>
                        </select>
                    </div>
                    <input type="text" id="searchText" placeholder="{{message('msg.004')}}">
                    <button class="btn icon_btn _fill"
                        onclick="gaiaPortal.totalPjtSearch('TextSearch', '{{message('msg.018')}}', '{{message('msg.004')}}', '{{message('msg.019')}}')">
                        <i class="ic ic-search"></i>
                        <span class="blind">{{message('btn.014')}}</span>
                    </button>
                    <button type="button" id="FavoritesSearch" class="icon_btn _outline" data-btn-toggle="favorites"
                        onclick="gaiaPortal.totalPjtSearch('FavoritesSearch', '', '', '{{message('msg.019')}}')">
                        <i class="ic ic-star-fill"></i>
                        <span class="blind">{{message('btn.015')}}</span>
                    </button>
                </div>
            </div>
            <div class="slick_wrap">
                <!-- S: Slick Slider -->
                <div class="pj_list ty_card" id="pjtContent" style="min-height: 500px;">
                    <p style="height: 500px; width: 100%; display: flex; align-items: center; justify-content: center; text-align: center; color: rgb(153, 153, 153);">데이터 로딩중입니다.</p>
                </div>
                <!-- //E: Slick Slider -->
                <div class="slick_nav">
                    <div class="slick_paging"></div>
                    <div class="btn_area slick_indigator">
                        <div class="btn_group _outline">
                            <button type="button" class="btn icon_btn prev">
                                <span class="blind">{{message('btn.016')}}</span>
                            </button>
                            <button type="button" class="btn icon_btn next">
                                <span class="blind">{{message('btn.017')}}</span>
                            </button>
                        </div>

                        <button type="button" id="pjtInstall" class="btn icon_btn _fill"
                            onclick="location.href='/project/project_install'" style="display: none;">
                            <i class="ic ic-plus"></i>
                            <span class="blind">{{message('btn.001')}}</span>
                        </button>
                        <button type="button" class="btn _outline" id="useRequest" onclick="openUseRequestWindow()"
                            style=" font-size: medium; ">
                            사용요청
                        </button>
                    </div>
                </div>
            </div>
        </section>

        <section class="support"></section>
        {% include "page/board/faqBoard_main" %}

        <article class="guide">
            <div class="in_container">
                <h3 class="sec_s-tit">서비스별 가이드를 확인하세요</h3>
                <p class="guide_list">
                    <button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '1')">
                        <i class="ic ic-city"><span class="path1"></span><span class="path2"></span><span
                                class="path3"></span><span class="path4"></span><span class="path5"></span><span
                                class="path6"></span><span class="path7"></span><span class="path8"></span></i>
                        <span class="m_name">사업관리</span>
                    </button>
                    <button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '2')">
                        <i class="ic ic-info"><span class="path1"></span><span class="path2"></span><span
                                class="path3"></span><span class="path4"></span><span class="path5"></span><span
                                class="path6"></span><span class="path7"></span><span class="path8"></span><span
                                class="path9"></span></i>
                        <span class="m_name">작업일지</span>
                    </button>
                    <button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '3')">
                        <i class="ic ic-analysis"><span class="path1"></span><span class="path2"></span></i>
                        <span class="m_name">기성신청</span>
                    </button>
					<button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '4')">
                        <i class="ic ic-data-screen"><span class="path1"></span><span class="path2"></span><span
                                class="path3"></span><span class="path4"></span><span class="path5"></span><span
                                class="path6"></span><span class="path7"></span><span class="path8"></span><span
                                class="path9"></span></i>
                        <span class="m_name">월간공정보고</span>
                    </button>
                    <button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '5')">
                        <i class="ic ic-workbench"><span class="path1"></span><span class="path2"></span></i>
                        <span class="m_name">CM업무일지</span>
                    </button>
                    <!-- <button type="button" class="btn" onclick="gaiaCommon.pdfViewUtil('GUIDE', '10')">
                        <i class="ic ic-system"><span class="path1"></span><span class="path2"></span><span
                                class="path3"></span></i>
                        <span class="m_name">시스템관리</span>
                    </button> -->
                </p>
            </div>
        </article>
        {% include "page/board/noticeBoard_main" %}

        </section>
    </main>
    {% include "sub/footer" %}
    {% include "sub/pop_box" %}
</body>

</html>
<script>
	gaiaCommon.LoadingOverlay('body', true);
    function openUseRequestWindow() {
        const width = 1200;
        const height = 615;
        let left = Math.ceil((window.screen.width - width) / 2);
        left += window.screenLeft || window.screenX;
        const top = Math.ceil((window.screen.height - height) / 2);
        
		let url = isGAIA()? '/project/useRequest/gaia' : '/project/useRequest/cairos';
        
        window.open(
            url,
            '_blank',
            `scrollbars=yes,resizable=yes,width=${width},height=${height},left=${left},top=${top}`
        );
    }

	$(function () {
        gaia.create({
            $init: function ($params) {
                gaiaPortal.mainInit();

                gaia.loaded = true;
            }
        });
    })
</script>